@using Entities;
@using Business.Interfaces;
@inject Business.Interfaces.IServices<WereHouse> WereHouseService;
@inject NavigationManager NavManager;

<EditForm Model="wereHouse">
    <div class="form-group">
        <label>Código</label>
        <InputText 
            @bind-Value="wereHouse.Id" 
            class="form-control">
        </InputText>
    </div>
    <div class="form-group">
        <label>Nombre</label>
        <InputText 
            @bind-Value="wereHouse.Name"
            class="form-control">
        </InputText>
    </div>
    <div class="form-group">
        <label>Dirección</label>
        <InputText 
            @bind-Value="wereHouse.Address"
            class="form-control">
        </InputText>
    </div>
    <div class="form-group">
        <button @onclick="Save" class="btn btn-primary">Guardar</button>
    </div>
</EditForm>

@code {
    WereHouse wereHouse = new WereHouse();

    private void Save()
    {
        WereHouseService.Add(wereHouse);
        NavManager.NavigateTo("/WereHouse/list");
    }
}
